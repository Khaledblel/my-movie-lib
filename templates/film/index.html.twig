{% extends 'base.html.twig' %}

{% block title %}Galerie de Films{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="fw-bold mb-0">Films à l'affiche</h1>
            <p class="text-muted">Découvrez vos films favoris et leurs acteurs</p>
        </div>
        <a href="{{ path('add_film') }}" class="btn btn-outline-primary rounded-pill">
            <i class="bi bi-plus-lg"></i> Ajouter
        </a>
    </div>

    <div class="row g-4">
        {% for film in lesFilms %}
            <div class="col-md-6 col-lg-4">
                <div class="movie-card h-100">
                    <div class="movie-img-container">
                        <img src="{{ film.image }}" alt="{{ film.nomFilm }}">
                        <span class="card-badge">{{ film.genre }}</span>
                    </div>
                    
                    <div class="movie-content">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="movie-title">{{ film.nomFilm }}</h5>
                            <span class="badge bg-light text-dark border">{{ film.AppearedAt|date('Y') }}</span>
                        </div>
                        
                        <div class="movie-meta mt-2">
                            <i class="bi bi-people-fill me-1"></i>
                            {% if film.acteurs|length > 0 %}
                                {{ film.acteurs|length }} Acteur(s)
                            {% else %}
                                Aucun acteur
                            {% endif %}
                        </div>

                        <hr class="text-muted opacity-25">

                        <div class="d-flex justify-content-between mt-3">
                            <a href="{{ path('edit_film', {'id': film.id}) }}" class="btn btn-sm btn-light text-primary">
                                <i class="bi bi-pencil"></i> Éditer
                            </a>
                            <a href="{{ path('film_delete', {'id': film.id}) }}" 
                               class="btn btn-sm btn-light text-danger" 
                               onclick="return confirm('Supprimer ce film ?')">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                        
                        <div class="mt-3">
                             <small class="text-muted">Casting:</small>
                             <div class="d-flex flex-wrap gap-1 mt-1">
                                {% for acteur in film.acteurs %}
                                    <a href="{{ path('acteur_show', {'id': acteur.id}) }}" class="badge bg-secondary text-decoration-none fw-normal">
                                        {{ acteur.nomActeur }}
                                    </a>
                                {% endfor %}
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <div class="text-muted">
                    <i class="bi bi-film display-1"></i>
                    <p class="mt-3 fs-5">Aucun film dans la bibliothèque.</p>
                    <a href="{{ path('add_film') }}" class="btn btn-custom-primary mt-2">Commencer maintenant</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
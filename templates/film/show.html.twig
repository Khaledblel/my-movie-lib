{% extends 'base.html.twig' %}

{% block title %}Profil Acteur - {{ acteur.nomActeur }}{% endblock %}

{% block body %}
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-8 col-lg-6">
            <div class="card form-card border-0">
                <!-- Header Decorative Background -->
                <div class="card-header border-0" style="height: 100px; background: var(--primary-gradient); border-radius: 20px 20px 0 0;"></div>
                
                <div class="card-body px-5 pb-5 text-center position-relative">
                    
                    <!-- Avatar Circle -->
                    <div class="bg-white rounded-circle p-1 d-inline-block shadow-sm position-absolute start-50 translate-middle-x" style="top: -50px; width: 100px; height: 100px;">
                        <div class="bg-light rounded-circle w-100 h-100 d-flex align-items-center justify-content-center text-primary">
                            <i class="bi bi-person-fill display-4"></i>
                        </div>
                    </div>

                    <!-- Actor Info -->
                    <div class="mt-5 pt-2">
                        <h2 class="fw-bold text-dark mb-1">{{ acteur.nomActeur }}</h2>
                        <span class="badge bg-secondary rounded-pill px-3 fw-normal">Acteur</span>
                    </div>

                    <!-- Stats Grid -->
                    <div class="row g-3 mt-4 mb-4">
                        <div class="col-6">
                            <div class="p-3 bg-light rounded-3 h-100 border">
                                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Nationalité</small>
                                <div class="fs-5 mt-1 text-dark">
                                    <i class="bi bi-geo-alt-fill text-danger me-1"></i> {{ acteur.Nationalite }}
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 bg-light rounded-3 h-100 border">
                                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Salaire</small>
                                <div class="fs-5 mt-1 text-success fw-bold">
                                    {{ acteur.Salaire|number_format(0, '.', ' ') }} $
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Associated Film Section -->
                    <div class="text-start">
                        <h6 class="text-muted text-uppercase fw-bold mb-3" style="font-size: 0.8rem; letter-spacing: 1px;">Filmographie Associée</h6>
                        
                        {% if acteur.film %}
                            <div class="card border-0 shadow-sm bg-light overflow-hidden">
                                <div class="row g-0">
                                    <div class="col-4">
                                        <img src="{{ acteur.film.image }}" class="img-fluid h-100" alt="{{ acteur.film.nomFilm }}" style="object-fit: cover; min-height: 80px;">
                                    </div>
                                    <div class="col-8">
                                        <div class="card-body p-3 d-flex flex-column justify-content-center h-100">
                                            <h6 class="card-title fw-bold mb-1 text-dark">{{ acteur.film.nomFilm }}</h6>
                                            <p class="card-text mb-0 small text-muted">
                                                <i class="bi bi-camera-reels me-1"></i> {{ acteur.film.genre }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="alert alert-warning border-0 bg-warning bg-opacity-10 text-warning d-flex align-items-center">
                                <i class="bi bi-exclamation-circle me-2"></i>
                                <div>Aucun film associé actuellement.</div>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Action Buttons -->
                    <div class="mt-5">
                        <a href="{{ path('home') }}" class="btn btn-outline-dark rounded-pill px-4 hover-shadow">
                            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Gestion{% endblock %}

{% form_theme f 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card form-card">
                <div class="form-header text-center">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Formulaire</h4>
                </div>
                <div class="card-body p-4">
                    {{ form_start(f, {'attr': {'novalidate': 'novalidate'}}) }}
                        
                        <div class="d-grid gap-3">
                            {% for child in f %}
                                {% if child.vars.name not in ['valider', 'Valider'] %}
                                    {{ form_row(child) }}
                                {% else %}
                                    <div class="d-none">
                                        {{ form_widget(child) }}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-custom-primary w-100 py-2">
                                <i class="bi bi-check-lg me-2"></i> Enregistrer
                            </button>
                        </div>

                    {{ form_end(f) }}
                </div>
                <div class="card-footer bg-white border-0 text-center pb-4">
                    <a href="{{ path('home') }}" class="text-decoration-none text-muted">
                        <i class="bi bi-arrow-left"></i> Annuler et retour
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}